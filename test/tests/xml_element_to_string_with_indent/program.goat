import "xml.goat";

var elem = new XML.Element("root");

var child = new XML.Element("empty");
child.attrib.first = 1;
child.attrib.second = "2nd";
elem.content.push(child);

elem.content.push("Text element");

child = new XML.Element("non_empty");
child.attrib.symbol = '$';
child.content.push("data");
elem.content.push(child);

child = new XML.Element("has_subchild");
child.content.push(new XML.Element("step", "one"));
child.content.push(new XML.Element("step", "two"));
child.content.push(new XML.Element("step", "three"));
elem.content.push(child);

print(elem.toString("| "));
